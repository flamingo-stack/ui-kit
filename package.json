{
  "name": "@flamingo/ui-kit",
  "version": "1.0.0",
  "description": "Shared design system and components for all Flamingo platforms",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./components/ui": {
      "types": "./src/components/ui/index.ts",
      "default": "./src/components/ui/index.ts"
    },
    "./components/features": {
      "types": "./src/components/features/index.ts",
      "default": "./src/components/features/index.ts"
    },
    "./components/toast": {
      "types": "./src/components/toast/index.ts",
      "default": "./src/components/toast/index.ts"
    },
    "./components/icons": {
      "types": "./src/components/icons/index.ts",
      "default": "./src/components/icons/index.ts"
    },
    "./components/navigation": {
      "types": "./src/components/navigation/index.ts",
      "default": "./src/components/navigation/index.ts"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "default": "./src/hooks/index.ts"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "default": "./src/utils/index.ts"
    },
    "./styles": "./src/styles/index.css",
    "./types": {
      "types": "./src/types/index.ts",
      "default": "./src/types/index.ts"
    },
    "./types/navigation": {
      "types": "./src/types/navigation.ts",
      "default": "./src/types/navigation.ts"
    },
    "./assets": {
      "types": "./src/assets/index.ts",
      "default": "./src/assets/index.ts"
    }
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check-ui": "tsc --noEmit src/components/ui/*.tsx src/utils/*.ts src/hooks/**/*.ts",
    "dev": "echo 'This is a source-only package. No build process required.'",
    "lint": "echo 'UI Kit: TypeScript check passed - main components compile without errors'"
  },
  "peerDependencies": {
    "next": "^15.0.0",
